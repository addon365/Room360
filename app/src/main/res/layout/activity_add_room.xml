<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context=".AddRoomActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="Room No"

                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Room No"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Amenities"
                android:textSize="18sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:paddingLeft="10dp"
                android:text="AC"
                android:textColor="#757575"

                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/AC"
                android:paddingLeft="10dp"
                android:text="Wifi"
                android:textColor="#757575"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/TV"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/wifi"
                android:layout_toRightOf="@+id/wifi"
                android:paddingLeft="10dp"
                android:text="TV"
                android:textColor="#757575"
                android:textSize="20sp" />
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">   <CheckBox
                android:id="@+id/heater"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/AC"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:text="Heater"
                android:textColor="#757575"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/roomtype"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/heater"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="Room Type"
                android:textSize="20sp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/outline_spinner"
            android:orientation="horizontal">

            <Spinner android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_below="@id/roomtype"
                android:layout_weight="1"
                android:spinnerMode="dropdown"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"
            android:text="Capacity"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="#EEEEEE"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="2"
            android:textSize="20sp"/>
         </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/btn"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="#757575"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>


